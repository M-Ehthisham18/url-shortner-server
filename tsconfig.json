{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",        // compiled JS goes here
    "rootDir": "./",         // root for TS files
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",              // include everything inside src
    "index.ts",              // main entry point
    "src/types"              // custom types
  ]
}

